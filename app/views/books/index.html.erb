<div class="panel panel-default">  
    <div class="panel-heading">
      <p id="notice"><%= notice %></p>
      <h1>Book Collections</h1>
    </div>

    <div class="panel-body">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Contracts in Book</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.name %></td>
                <td><%= book.page_count %></td>
                <td><div class="btn btn-default"><%= link_to 'Show All Contracts in Book', book %></div></td>
                <td><div class="btn btn-success"><%= link_to 'Edit Book', edit_book_path(book) %></div></td>
                <td><div class="btn btn-danger"><%= link_to 'Remove Book', book, method: :delete, data: { confirm: 'Your are deleting a complete book !!' } %></div></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
<div>Select a book to create new Contract</div>
  <br>
<div class="btn btn-info">
  <%= link_to 'Create New Book', new_book_path %>
</div>

<%=  render "sort/mycontracts" 
%>

<%= #render 'form', contract: @contract 
%>
<%= # link_to 'New Contract of Book', new_contract_path(book_id: 1)
 %>
<%= # render "sort/parts" 
%>

<%= # render "sort/layouts" 
%>

<%=  render "sort/menu" 
%>
</div>
