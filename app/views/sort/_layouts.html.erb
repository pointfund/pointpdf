
<div class="panel panel-default">  
    <div class="panel-heading">

        <h2>Layouts of each Section</h2>
        <div class="row">
        <div class="col-md-6">Sections:<%= @contract.sections %>        </div>
        <div class="col-md-6"><span class="pull-right">Layouts:  <%= @layouts.length %> </span></div>
      </div>
    </div>

    <div class="panel-body">
        <table>
          <thead>
            <tr>
              <!-- <th>Book Name</th> -->
              <th>ID:</th>
              <th>Area:</th>

              <th>Cont:</th>
              <th>Sect:</th>

              <th>X:</th>
              <th>Y:</th>
              <!-- <th>Page part</th> -->
              <th colspan="3"></th>
            </tr>
          </thead>
        	    <% @layouts.each do |layout| %>
              <tr>
                <td><%= layout.id %></td>
                <td><%= layout.name %></td>
        
                <td><%= layout.contract_id %></td>
                <td><%= layout.page_part %></td>

                <td><%= layout.posx %></td>
                <td><%= layout.posy %></td>

                <td><div class="btn btn-default">
                  <%= link_to 'Show', layout %></div></td>
                <td><div class="btn btn-success">
                  <%= link_to 'Edit', edit_page_layout_path(layout) %></div></td>
                <td>

                 <% if(params[:contract_id]) %>
                    <div class="btn btn-danger">
                    <%= link_to 'Remove', layout, method: :delete, data: { confirm: 'Remove Layout?' } %></div>
                <% else %>


                <% end %>



                </td>
              </tr>
            <% end %>
        </table>
    </div>

</div>