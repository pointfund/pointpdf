<div class="panel panel-default">  
  <div class="panel-heading">
      <h2>Sections in Contract :<%= params[:id] %> </h2>
    <div class="row">
      <div class="col-md-6">Sections: </div>
      <div class="col-md-6"><span class="pull-right"><%= @page_parts.length %></span></div>
    </div>
  </div>
 
  <div class="panel-body">
    <table>
    	<thead>
        <tr>
          <th>ID</th>
          <th>Section</th>
          <th>Content</th>
          <th>Contract</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <% @page_parts.each do |page_part| %>
          <tr>
            <td><%= page_part.id %></td>
            <td><%= page_part.name %></td>
            <td><%= page_part.content %></td>
            <td><%= page_part.contract_id %></td>
            
            <td><div class="btn btn-default">
              <%= link_to 'View', page_part %></div></td>
            <td><div class="btn btn-info">
              <%= link_to 'Change', edit_page_part_path(page_part) %></div></td>
<!--             <td><div class="btn btn-danger">
              <%= #link_to 'Remove', page_part, method: :delete, data: { confirm: 'Are you sure?' } 
              %></div></td> -->
              <td>
            <div class="btn btn-info"><%= link_to "Add Layout #{page_part.id}", new_page_layout_path(contract_id: @contract.id, page_part: page_part.id ) %></div>
          </td>




          </tr>
        <% end %>

    </table>

  </div>


  <div class="btn btn-info"><%= link_to "Add Section", new_page_part_path(contract_id: @contract.id ) %></div>
</div>