<div class="panel panel-default panel-alert"> 
    <div class="panel-heading"> 
    <p id="notice"><%= notice %></p>
    <h1>Contracts</h1>
    </div>
    <div class="panel-body"> 
        <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Sections</th>
                <th>Book</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @contracts.each do |contract| %>
                <tr>
                  <td><%= contract.id %></td>
                  <td><%= contract.name %></td>
                  <td><%= contract.sections %></td>
                  <td><%= contract.book_id %></td>





                  <td><div class="btn btn-default"><%= link_to 'Show', contract %></div></td>
                  <td><div class="btn btn-info"><%= link_to 'Edit', edit_contract_path(contract) %></div></td>
                  <td><div class="btn btn-info"><%= link_to 'Create PDF', pdf_pages_create_path(id: contract.id ) %></div></td>
                  <td><div class="btn btn-danger"><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
                </tr>
              <% end %>
            </tbody>
        </table>
        <br />
        <div class="btn btn-info">
            <%= link_to 'New Contract', new_contract_path %>
        </div>
    </div>
    <%= render "sort/menu" 
    %>
    